<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
    </div>

    <div class="col-md-8">
      <%= render 'follow_form' if user_signed_in? %>

    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>

    <% @likes.each do |like|%>
      <% videopost = Videopost.find_by(id: like.videopost_id) %>

      <div class="posts-index-item">
        <div class="post-user-name">
          <%= link_to(videopost.user.name, "/users/#{videopost.user.id}") %>
        </div>
          <span class="videopost_content"><%= link_to(get_video_iframe(videopost.content), "/posts/#{videopost.id}") %></span>
      </div>
    <% end %>
  </div>
</div>
